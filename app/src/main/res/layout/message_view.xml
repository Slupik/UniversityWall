<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">


    <data>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/messageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Maecenas quis dui felis. Fusce purus urna" />

        <TextView
                android:id="@+id/messageGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Informatyka 3 InÅ¼ynieria Oprogramowania" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

            <TextView
                    android:id="@+id/messageCreatorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    tools:text="Name Surname" />

            <TextView
                    android:id="@+id/messageCreationTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textPrimary"
                    tools:text="2019.12.09 23:49:01" />
        </LinearLayout>

        <TextView
                android:id="@+id/messageContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:paddingBottom="4dp"
                android:textColor="@color/textPrimary"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed commodo justo ut cursus dignissim. Donec sagittis aliquet mauris, sollicitudin dignissim urna dictum nec. Duis non vehicula quam. Sed quis lacus in tellus iaculis blandit. Vestibulum vel ullamcorper enim. Nulla facilisi. Aenean vehicula pellentesque mi sit amet pharetra." />

        <TextView
                android:id="@+id/messageFileInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textLink"
                android:textStyle="italic"
                tools:text="Download file (file name)" />
    </LinearLayout>


    <!--    <androidx.constraintlayout.widget.ConstraintLayout-->
